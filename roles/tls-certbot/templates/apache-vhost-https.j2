<VirtualHost *:443>
    ServerName www.{{ website_domain }}
    ServerAlias {{ website_domain }}
    DocumentRoot /usr/share/wordpress

    SSLEngine on
    SSLCertificateFile /etc/letsencrypt/live/{{ website_domain }}/cert.pem
    SSLCertificateKeyFile /etc/letsencrypt/live/{{ website_domain }}/privkey.pem
    SSLCertificateChainFile /etc/letsencrypt/live/{{ website_domain }}/chain.pem
</VirtualHost>

